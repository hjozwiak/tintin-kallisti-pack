#ACTION {^%w is {moderately hurt|severely hurt|near death}.$}
{
	#list {autohealList} {find} {%1} {i};
	#if {$i != 0}
	{
		#switch {"${MSDP_CLASS}"}
		{
			#case {Paladin}
			{
				#if {$OPPONENT_HEALTH == 0}
				{
					lay %1
				};
				#else
				{
					#list {onDeath} {add} {lay %1}
				}
			};
			#default
			{
				HEAL %1
			}
		}
	};
	#list {autorescueList} {find} {%1} {i};
	#if {$i != 0}
	{
		Rescue %1
	}
}
