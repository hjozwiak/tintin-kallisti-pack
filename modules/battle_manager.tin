#ACTION {^You receive your reward for the kill, %1}
{
	#nop {Hook name is mobDeath.};
	#nop {Hook args all text for rewoard for the kill.};
	#if {"${onDeath}" != ""}
	{
		#forall {${onDeath[]}}{${onDeath[&0]}};
		#list {onDeath} {clear}
	};
	look in corpse;
	#if {!&{spam.save}}
	{
		save;
		spamset save
	};
	#list {mobDeath} {size} {i};
	#if {$i > 0}
	{
		#forall {${mobDeath[]}} {@${mobDeath[&0]}{%1}}
	}
}
