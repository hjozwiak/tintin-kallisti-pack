#ALIAS {^{notank|tank|tank \w+}$}
{
	#if {"%0" == "notank"}
	{
		#variable {battle_manager.tankName} {};
		#echo {Tank cleared.}
	};
	#else
	{
		#regexp {%0} {{.*} {.*}} {#variable {battle_manager.tankName} {&2}};
		#else
		{
			#variable {battle_manager.tankName} {self}
		};
		#echo {tank set to ${battle_manager.tankName}\.}
	}
}
