#ACTION {%1 diverts its attention to %w.$}
{
	#list {autorescueList} {find} {%2} {i};
	#if {$i != 0}
	{
		rescue ${autorescueList[$i]}
	}
}
{9}

#ACTION {%1 flies from your grasp.$}
{
	gt OH GODS NOOOO! I have been disarmed!;
	rem buckler;
	#regexp {%1} {{.*} {.*}} {get &2;wield &2};
	#else
	{
		get %1;
		wield %1
	};
	wear buckler
}
{9}

#ACTION {%1 hits %w {}{\.|!}$}
{
	#list {autorescueList} {find} {%2} {i};
	#if {$i != 0}
	{
		rescue ${autorescueList[$i]};
		spamset rescue%2
	}
}
{9}

#ACTION {^%w attempts to backstab %2, but flies right through {her|him|it}.$}
{
	#list {autorescueList} {find} {%2} {i};
	#if {$i != 0}
	{
		rescue ${autorescueList[$i]}
	}
}
{9}

#ACTION {^%w is {moderately hurt|severely hurt|near death}.$}
{
	#list {autohealList} {find} {%1} {i};
	#if {$i != 0}
	{
		#switch {"${MSDP_CLASS}"}
		{
			#case {Paladin}
			{
				#if {$OPPONENT_HEALTH == 0}
				{
					lay %1
				};
				#else
				{
					#list {onDeath} {add} {lay %1}
				}
			};
			#default
			{
				HEAL %1
			}
		}
	};
	#list {autorescueList} {find} {%1} {i};
	#if {$i != 0}
	{
		Rescue %1
	}
}
