#ACTION {^Saving %w.$}
{
	#if {"${spam.save}" == "true"}
	{
		#line {gag}
	}
}
{9}

#ACTION {^You receive your reward for the kill, %d experience poin{t|ts}.}
{
	#if {"${battle_manager.tankName}" != ""}
	{
		reform ${battle_manager.tankName} fr;
		march ${battle_manager.tankName}
	};
	#nop {Do anything that needs to be scheduled on death.};
	#if {"${onDeath}" != ""}
	{
		#forall {${onDeath[]}}{${onDeath[&0]}};
		#list {onDeath} {clear}
	};
	look in corpse #nop {Save after every battle.};
	#if {!&{spam.save}}
	{
		save;
		spamset save
	}
}
