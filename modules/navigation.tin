#action {%1 {crawls|limps|staggers} %S.$}
{
#variable {runAway} {%1};
#variable {fleeDirection} {%3}
}
{5}

#action {%1 has fled!$}
{
#if {"%1" == "$runAway"}
{
#switch {"$fleeDirection"}
{
#case {"east"}
{
#system {play -qV0 "|sox -np synth 0.1 wh" "|sox -np synth 0.1 wh remix v0.5 v1" "|sox -np synth 0.1 wh remix v0 v1" gain $volume&}
};
#case {"north"}
{
#system {play -qV0 "|sox -np synth 0.1 wh" "|sox -np synth 0.1 wh remix v0.5 v0.5" "|sox -np synth 0.1 wh remix v0.2 v0.2" gain $volume&}
};
#case {"south"}
{
#system {play -qV0 "|sox -np synth 0.1 br" "|sox -np synth 0.1 br remix v0.5 v0.5" "|sox -np synth 0.1 br remix v0.2 v0.2" gain $volume&}
};
#case {"west"}
{
#system {play -qV0 "|sox -np synth 0.1 wh" "|sox -np synth 0.1 wh remix v1 v0.5" "|sox -np synth 0.1 wh remix v1 v0" gain $volume&}
};
}
}
}
{9}

#ACTION {^Alas, you cannot go that way.$}
{
	#system {play -qnV0 synth 0.5 tri 400:300 tri 700:500 remix - fade 0 0.2 0.5&}
}
{9}

