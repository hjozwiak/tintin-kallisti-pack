#ACTION {^%w %*tells you, ':%3'$}
{
	#local {accountName} {%2};
	#replace {accountName} {{\(|\)| }} {};
	#if {@is_friend{$accountName} && !@is_friend{%1}}
	{
		friend add %1
	};
	Channel_Event Tell %0;
	#if {@is_friend{%1}}
	{
		#switch {"%3"}
		{
			#case {"where"}
			{
				reply $MSDP_ROOM_NAME
			};
			#default
			{
				@trust_exec{%3}
			}
		}
	}
}
{7}

#ACTION {^**%w: '%S %3'$}
{
	#nop {See communication.tin for groupTell hook info.};
	#local {i} {};
	#local {j} {};
	Channel_Event GroupTell %0;
	#if {@is_friend{%1} && "%2" == "{${MSDP_CHARACTER_NAME}|all}"}
	{
		@trust_exec{%3}
	};
	#list {hook[groupTell]} {size} {i};
	#if {$i > 0}
	{
		#foreach {*{hook[groupTell][]}} {j}
		{
			@${j}{%1;'%2 %3'}
		}
	}
}
