#FUNCTION {is_friend}
{
	#local {f} {};
	#format {f} {%n} {%1};
	#list {friends} {find} {${f}} {i};
	#if {$i > 0}
	{
		#variable {result} {1}
	};
	#else
	{
		#variable {result} {0}
	}
}

#FUNCTION {trust_exec}
{
	#local {f} {};
	#format {f} {%l} {%0};
	#switch {"${f}"}
	{
		#case {"{\s*\#|\s*;*\s*\#}%*"}
		{
			#return #nop
		};
		#case {"{\s*h|;*\s*h}ardc%*"}
		{
			#return #nop
		};
		#case {"{\s*o|;*\s*o}utl%*"}
		{
			#return #nop
		};
		#case {"%*{ste |stea|steal}%*"}
		{
			#return #nop
		};
		#default
		{
			#return %0
		}
	}
}
